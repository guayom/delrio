---
mastheadbg: /images/pano1.png
layout: content
---
<% content_for(:masthead_title) do %>
  <%= t(:contact) %>
<% end %>
<% content_for(:matching_path) do %>
<%= get_matching_path(get_opposite_locale(I18n.locale.to_s) , "contact") %>
<% end %>
<div class="col-md-6">
  <h3><%= t(:contact_form) %></h3>
  <form method="post" action="https://formspree.io/info@delrioexoticflowers.com">
     <div class="form-group ">
      <p><span class="reminder"><%= t(:required_fields) %></span></p>
      <label class="control-label " for="name">
       <%= t(:name) %>
      </label>
      <input class="form-control" id="name" name="name" type="text"/>
     </div>
     <div class="form-group ">
      <label class="control-label requiredField" for="_replyto">
       <%= t(:email) %>
       <span class="asteriskField">
        *
       </span>
      </label>
      <input class="form-control" id="email" name="_replyto" type="text"/>
     </div>
     <div class="form-group ">
      <label class="control-label " for="subject">
       <%= t(:subject) %>
      </label>
      <input class="form-control" id="subject" name="subject" type="text"/>
     </div>
     <div class="form-group ">
      <label class="control-label " for="message">
       <%= t(:message) %>
      </label>
      <textarea class="form-control" cols="40" id="message" name="message" rows="10"></textarea>
     </div>
     <input type="hidden" name="_next" value="<%= "/#{I18n.locale.to_s}/#{t(:thank_you_path)}.html" %>" />
     <input type="hidden" name="_subject" value="Contacto desde la pÃ¡ginas" />
     <input type="text" name="_gotcha" style="display:none" />
     <div class="form-group">
      <div>
       <button class="btn btn-rounded btn-primary smooth-scroll validate" name="submit" type="submit">
        <%= t(:submit) %>
       </button>
      </div>
     </div>
    </form>
</div>
<div class="col-md-6">
  <h3><%= t(:info) %></h3>
  <p><%= t(:info_message) %></p>
  <h3><%= t(:contact) %></h3>
	<i class="fa fa-phone"></i>+506 2265 2513<br/>
	<i class="fa fa-phone-square"></i>+506 8719-3939
  <h3>Links</h3>
  <ul class="list-unstyled">
    <li>
      <a href="http://www.facebook.com/obashe" class="facebook" target="_blank"><i class="fa fa-facebook"></i>  Facebook</a>
    </li>
    <li>
      <a href="http://instagram.com/del_rio_exotic_flowers/" class="instagram" target="_blank"><i class="fa fa-instagram"></i> Instagram</a>
    </li>
  </ul>
</div>
